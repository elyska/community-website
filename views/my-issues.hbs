<main>
    <article> 
        {{#each issues}}
        <a href="/issues/{{id}}">
            <section>
                <figure>
                    <img src="/uploads/{{photo}}" alt="Issue Image" />
                </figure>
                 <ul>
                    <li>{{title}}</li>
                    <li>{{location}}</li>
                    <li>{{convertDate currdate}}</li>
                 </ul>
            </section>
        </a>
        {{/each}}
    </article>     
</main>