<main>
    <h2>Add Issue</h2>
    <form action="/add" method="post" enctype="multipart/form-data">
            
			<p>
				<label for="name">Issue Name</label><br />
				<input type="text" name="name" autofocus>
			</p>
            
			<p>
				<label for="location">Description of the Location</label><br />
				<input type="text" name="location">
			</p>
        
            <p>
				<label for="decription">Issue Description</label><br />
                <textarea name="decription" rows="10" cols="30"></textarea>
			</p>
        
            <p>
				<label for="photo">Upload a Photo</label><br />
                <input type="file" name="photo">
			</p>
                  
			<p>
                <input type="submit" value="Submit">
            </p>                            
     </form>         
                 
</main>