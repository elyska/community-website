<main>
    <h2>Add Issue</h2>
    <form action="/add" method="post" enctype="multipart/form-data">
            
			<p>
				<label for="title">Issue Title</label><br />
				<input type="text" name="title" maxlength="60" autofocus required>
			</p>
            
			<p>
				<label for="location">Description of the Location</label><br />
				<input type="text" name="location" maxlength="100" required>
			</p>
        
            <p>
				<label for="description">Issue Description</label><br />
                <textarea name="description" rows="10" cols="30" required></textarea>
			</p>
        
            <p>
				<label for="photo">Upload a Photo</label><br />
                <input type="file" name="photo" access="img/*">
			</p>
                  
			<p>
                <input type="submit" value="Submit">
            </p>                            
     </form>         
                 
</main>